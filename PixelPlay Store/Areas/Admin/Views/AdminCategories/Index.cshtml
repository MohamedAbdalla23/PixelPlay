@model IEnumerable<CategoryGameCountViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h1>
    <i class="bi bi-bookmarks"></i>
    Categories
</h1>


<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-bookmark-plus"></i>
    Add New Category
</a>


<table class="table">
    <thead>
        <tr>
            <th class="w-auto">ID</th>
            <th class="w-50">@Html.DisplayNameFor(model => model.Name)</th>
            <th class="w-25">@Html.DisplayNameFor(model => model.NoGameCount)</th>
            <th class="w-25">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="w-auto">
                    @item.Id
                </td>
                <td class="w-50">                   
                    @item.Name                  
                </td>
                <td class="w-auto">
                    @item.NoGameCount
                </td>
                <td class="w-25">
                    <a asp-action="Edit" class="btn btn-sm btn-dark rounded-3 me-1" asp-controller="AdminCategories" asp-route-id="@item?.Id">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="javascript:;" class="btn btn-sm btn-danger rounded-3 js-cat-delete" data-id="@item!.Id">
                        <i class="bi bi-trash3"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/js/category-delete.js" asp-append-version="true"></script>
}

