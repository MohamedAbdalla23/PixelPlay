@model Games

<a class="card h-100 text-decoration-none shadow-sm d-flex flex-column" asp-controller="Games" asp-action="Details" asp-route-id="@Model.Id" style="max-width: 20rem;">
    <div class="card-header text-truncate fw-bold text-white bg-primary text-center" title="@Model.Name">
        @Model.Name
    </div>

    <div class="card-body d-flex justify-content-center align-items-center p-2" style="flex-grow: 1; min-height: 250px;">
        <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")"
             alt="@Model.Name"
             class="img-fluid"
             style="max-height: 100%; max-width: 100%; object-fit: contain;" />
    </div>

    <div class="card-footer d-flex flex-column gap-2 px-2 pt-2">
        <div class="d-flex flex-wrap gap-1 mb-1">
            @foreach (var gamecategories in Model.GameCategories)
            {
                <span class="badge bg-secondary">@gamecategories.Category.Name</span>
            }
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                @foreach (var gamedevices in Model.GameDevices)
                {
                    <i class="@gamedevices.Device.Icon me-2 fs-5"></i>
                }
            </div>           
        </div>
    </div>
</a>
