@model Games

<style>
    .simple-game-card {
        background-color: #1c1c1c;
        color: #fff;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .simple-game-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.3);
    }

    .game-img-wrapper {
        height: 220px;
        background: #000;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
    }

    .game-img-wrapper img {
        height: 100%;
        width: auto;
        object-fit: contain;
    }

    .game-info {
        padding: 1rem;
        flex-grow: 1;
    }

    .game-title {
        font-size: 1.05rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        white-space: normal;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        max-height: 2.6em; /* ≈ 2 lines */
        line-height: 1.3em;
    }

    .game-price {
        color: #28a745;
        font-weight: 500;
    }

    .card-footer {
        padding: 0.75rem 1rem;
        background-color: #1c1c1c;
        border-top: 1px solid #333;
    }

    .card-footer .btn {
        border-radius: 999px;
    }
</style>

<div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
    <div class="simple-game-card">
        <a asp-controller="Games" asp-action="Details" asp-area="User" asp-route-id="@Model.Id" class="text-decoration-none text-white">
            <div class="game-img-wrapper">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" />
            </div>
            <div class="game-info">
                <div class="game-title" title="@Model.Name">@Model.Name</div>
                <div class="game-price">$@Model.Price</div>
            </div>
        </a>

        <div class="card-footer mt-auto">
            <form asp-controller="Cart" asp-action="Add" method="post" class="d-grid">
                <input type="hidden" name="gameId" value="@Model.Id" />
                <button type="submit" class="btn btn-success btn-sm w-100">
                    <i class="bi bi-cart-plus me-1"></i> Add to Cart
                </button>
            </form>
        </div>
    </div>
</div>
