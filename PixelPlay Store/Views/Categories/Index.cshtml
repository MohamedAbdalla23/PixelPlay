@model IEnumerable<PixelPlay.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h1>
    <i class="bi bi-bookmarks"></i>
    Categories
</h1>


<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-bookmark-plus"></i>
    Add New Category
</a>


<table class="table">
    <thead>
        <tr>
            <th class="w-auto">ID</th>
            <th class="w-75">@Html.DisplayNameFor(model => model.Name)</th>
            <th class="w-25">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="w-auto">@item.Id</td>
                <td class="w-75">
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-white d-block">
                        @item.Name
                    </a>
                </td>
                <td class="w-25">
                    <a asp-action="Edit" class="btn btn-sm btn-dark rounded-3 me-1" asp-controller="Categories" asp-route-id="@item?.Id">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger rounded-3 js-delete" asp-route-id="@item!.Id">
                        <i class="bi bi-trash3"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
