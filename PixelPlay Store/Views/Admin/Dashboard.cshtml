@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">👋 Welcome, @User.Identity!.Name</h2>

<div class="row mb-4">
    <div class="col-md-6 col-lg-4">
        <div class="card text-white bg-primary shadow">
            <div class="card-body">
                <h5 class="card-title">👥 Total Users</h5>
                <p class="card-text display-6 fw-bold">@Model.TotalUsers</p>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-dark btn-sm mt-2">Manage Users</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <h5 class="card-title">🛡️ Total Roles</h5>
                <p class="card-text display-6 fw-bold">@Model.TotalRoles</p>
                <a asp-controller="Roles" asp-action="Index" class="btn btn-dark btn-sm mt-2">Manage Roles</a>
            </div>
        </div>
    </div>
</div>

<div class="mb-4">
    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success me-2">
        ➕ Add New User
    </a>
    <a asp-controller="Admin" asp-action="Search" class="btn btn-outline-secondary me-2">
        🔍 Search Users
    </a>
    <a asp-controller="Admin" asp-action="AuditLogs" class="btn btn-outline-dark">
        📋 View Audit Logs
    </a>
</div>

<div class="card shadow">
    <div class="card-header bg-secondary">
        <h4 class="mb-0">🕓 Recent Registered Users</h4>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-secondary">
                <tr>
                    <th style="width: 40px;"></th>
                    <th>User Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.RecentUsers)
                {
                    @* <a asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id">  *@
                    <tr>
                        
                        <td class="text-center align-middle">
                            <span class="text-primary fs-4">👤</span>
                        </td>
                        <td class="align-middle">@user.UserName</td>
                        <td class="align-middle">
                            <span class="badge bg-secondary">@user.Email</span>
                        </td>

                    </tr>
                    //</a>
                }
            </tbody>
        </table>
    </div>
</div>
