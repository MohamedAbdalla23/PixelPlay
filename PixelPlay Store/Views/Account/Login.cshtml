@using Azure
@model PixelPlay.ViewModel.LoginFormViewModel

@{
    ViewData["Title"] = "Login";
    // Context.Response.Headers["Cache-Control"] = "no-store, no-cache, must-revalidate";
    // Context.Response.Headers["Pragma"] = "no-cache";
    // Context.Response.Headers["Expires"] = "-1";
}


<div class="row ms-xl-5 me-xl-5">
    <div class="col-md-4 me-auto mb-xl-5">
        <h1>Login</h1>
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="LoginInput" class="control-label"></label>
                <input asp-for="LoginInput" class="form-control" />
                @* <span asp-validation-for="Username" class="text-danger"></span> *@
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                @* <span asp-validation-for="Password" class="text-danger"></span> *@
            </div>
            <div class="form-check-inline d-flex mb-2">
                <input type="checkbox" asp-for="RememberMe" class="form-check mx-1" /> 
                <label asp-for="RememberMe" class="form-check-label"></label>                       
                @* <span asp-validation-for="RememberMe" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <input type="submit" value="LOG IN" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-7 d-flex justify-content-center align-items-center border-start mb-xl-5">
        <div class="text-center d-flex flex-column align-items-center gap-3">
            <h2 class="mb-lg-4">NO ACCOUNT YET?</h2>
            <div class="mb-lg-4">Create an account</div>
            <div>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
